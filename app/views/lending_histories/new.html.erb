<h2>Borrow Book</h2>
<%= form_with model: @lending_history, url: book_lending_histories_path(@book), local: true do |form| %>
  <div class="mb-3">
    <%= form.label :borrower_name, "Your Name", class: "form-label" %>
    <%= form.text_field :borrower_name, class: "form-control", required: true %>
  </div>
  <%= form.submit "Borrow Book", class: "btn btn-success" %>
<% end %>
<%= link_to "Back to Book Details", book_path(@book), class: "btn btn-secondary" %>
