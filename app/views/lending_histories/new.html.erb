<h1>Borrow <%= @book.title %></h1>
<%= form_with(model: [@book, @lending_history], local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :borrower_name, "Your Name", class: "form-label" %>
    <%= f.text_field :borrower_name, class: "form-control" %>
  </div>

  <%= f.submit 'Borrow Book', class: "btn btn-success" %>
<% end %>

<%= link_to 'Back to Books', books_path, class: "btn btn-secondary" %>
