<h1>Add a New Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, [['Available', 'available'], ['Borrowed', 'borrowed']], class: "form-control" %>
  </div>
  <%= form.submit "Create Book", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
