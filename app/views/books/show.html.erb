<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Description:</strong> <%= @book.description %></p>
<p><strong>Status:</strong> <%= @book.status %></p>

<h2>Borrowing History</h2>
<table class="table">
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Borrowed At</th>
      <th>Returned At</th>
    </tr>
  </thead>
  <tbody>
    <% @book.lending_histories.each do |history| %>
      <tr>
        <td><%= history.borrower_name %></td>
        <td><%= history.borrowed_at.strftime("%Y-%m-%d %H:%M") if history.borrowed_at %></td>
        <td><%= history.returned_at ? history.returned_at.strftime("%Y-%m-%d %H:%M") : "Not Returned" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Books', books_path, class: "btn btn-secondary" %>
