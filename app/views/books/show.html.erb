
<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Description:</strong> <%= @book.description %></p>
<p><strong>Status:</strong> <%= @book.status %></p>

<h3>Lending History:</h3>
<% if @lending_histories.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Borrower Name</th>
        <th>Borrowed At</th>
        <th>Returned At</th>
      </tr>
    </thead>
    <tbody>
      <% @lending_histories.each do |history| %>
        <tr>
          <td><%= history.borrower_name %></td>
          <td><%= history.borrowed_at.strftime("%B %d, %Y") %></td>
          <td><%= history.returned_at ? history.returned_at.strftime("%B %d, %Y") : 'Not yet returned' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No borrowing history available for this book.</p>
<% end %>

<%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
