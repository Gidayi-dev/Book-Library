
<h1>Book Library</h1>
<%= link_to 'Add New Book', new_book_path, class: "btn btn-primary mb-3" %>
<table class="table mt-3">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Delete', book, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          <% if book.status == "available" %>
            <%= link_to 'Borrow', new_book_lending_history_path(book), class: "btn btn-success btn-sm" %>
          <% else %>
            <%= link_to 'Return', return_book_path(book), method: :patch, class: "btn btn-info btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
